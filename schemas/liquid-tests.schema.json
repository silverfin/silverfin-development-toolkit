              "type": "object",
              "additionalProperties": false,
              "patternProperties": { "": { "$ref": "#/$defs/account" } }
            },
            "adjustments": {
              "oneOf": [
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "internal": {
                      "type": "object",
                      "additionalProperties": false,
                      "patternProperties": {
                        "^[0-9]+$": { "$ref": "#/$defs/adjustment" }
                      }
                    },
                    "external": {
                      "type": "object",
                      "additionalProperties": false,
                      "patternProperties": {
                        "^[0-9]+$": { "$ref": "#/$defs/adjustment" }
                      }
                    }
                  }
                },
                { "type": "null" }
              ]
            },
