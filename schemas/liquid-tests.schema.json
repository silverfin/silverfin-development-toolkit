  "$defs": {
    "account": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "number" },
        "value": { "type": "number" },
        "name": { "type": "string" },
        "original_name": { "type": "string" },
        "custom": { "$ref": "#/$defs/textProperty" },
        "mapped_number": { "type": "string" },
        "starred": { "type": "boolean" },
        "results": { "$ref": "#/$defs/namedResult" }
      }
    },
    "analytical_dimension": {
      "type": "object",
      "additionalProperties": false,
      "propertyNames": { "type": "string" },
      "patternProperties": {
        "": {
          "type": "object",
          "additionalProperties": false,
          "required": ["periods"],
          "properties": {
            "code": { "type": "number" },
            "periods": {
              "type": "object",
              "additionalProperties": false,
              "propertyNames": { "type": "string", "format": "date" },
              "patternProperties": {
                "": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["accounts"],
                  "properties": {
                    "accounts": {
                      "type": "object",
                      "additionalProperties": false,
                      "patternProperties": {
                        "": {
                          "type": "object",
                          "additionalProperties": false,
                          "properties": { "value": { "type": "number" } }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "reconciliation": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "value": { "type": "number" },
            "name": { "type": "string" },
            "starred": { "type": "boolean" },
            "custom": { "$ref": "#/$defs/textProperty" },
            "results": { "$ref": "#/$defs/namedResult" }
          }
        },
        { "type": "null" }
      ]
    },
    "adjustment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags": { "type": "array", "items": { "type": "string" } },
        "purpose": { "type": "string" },
        "type": {
          "oneOf": [
            { "type": "string", "enum": ["reverse", "forward", "copy"] },
            { "type": "null" }
          ]
        },
        "forward_account": { "type": "number" },
        "transactions": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": { "": { "$ref": "#/$defs/transaction" } }
        }
      }
    },
    "transaction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": { "type": "number" },
        "relation": { "type": "string" },
        "account": { "type": "number" }
      }
    },
    "textProperty": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[^\\.]+\\.[^\\.]+$": {
          "oneOf": [
            { "type": ["null", "boolean", "number", "string", "array"] },
            { "$ref": "#/$defs/objectTextProperty" }
          ]
        }
      }
    },
    "objectTextProperty": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[^\\.]+$": {
          "type": ["null", "boolean", "number", "string", "array"]
        }
      }
    },
    "namedResult": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[^\\.]+$": {
          "type": ["null", "boolean", "number", "string", "array"]
        }
      }
    },
    "period": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
